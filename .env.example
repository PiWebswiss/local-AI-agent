# OCR.Space API key used for OCR on images/PDF pages.
OCR_SPACE_API_KEY=helloworld
# Default OCR language code when prompt language is unclear (e.g., eng, fre).
OCR_SPACE_LANGUAGE=eng

# Primary Ollama model used by the agent.
OLLAMA_MODEL=gemma3:1b
# Maximum allowed model size in billions of parameters (0 disables size cap).
OLLAMA_MAX_B=0
# Timeout (seconds) for Ollama requests.
OLLAMA_TIMEOUT_S=300

# Enable multi-agent committee mode (on/off).
AGENT_MULTI_AGENT=on
# Scopes where committee mode is allowed.
AGENT_MULTI_SCOPES=chat,research,book,summarize,correct
# Comma-separated model list.
AGENT_MULTI_MODELS=gemma3:1b,llama3.2:3b,qwen2.5:1.5b
# Let the dispatcher choose model count by complexity.
AGENT_MULTI_SMART=on
# Use a dedicated planner step for research/book complexity routing.
AGENT_MULTI_DISPATCH_LLM=on
# Enable post-answer strict audit pass for non-correction tasks.
AGENT_STRICT_ACCURACY=on
# Number of models for simple tasks.
AGENT_MULTI_SIMPLE_MODELS=1
# Number of models for medium tasks (accuracy-first: use all configured models here).
AGENT_MULTI_MEDIUM_MODELS=3
# Number of models for hard tasks (0 means all configured models).
AGENT_MULTI_HARD_MODELS=0
# Enable role split (solver/skeptic/grounding/editor) across models.
AGENT_MULTI_ROLE_MODE=on
# Enable peer review pass before final merge.
AGENT_MULTI_PEER_REVIEW=on
# Number of reviewer models (0 means all selected models).
AGENT_MULTI_REVIEWERS=0
# Maximum parallel draft workers (0 means all selected models in parallel).
AGENT_MULTI_MAX_WORKERS=0
# Default draft temperature for committee drafts (lower = more deterministic).
AGENT_MULTI_DRAFT_TEMP=0.15
# Run a second-model cross-check for risky factual chat answers when only one model drafted.
AGENT_CHAT_SECOND_LOOK=on
# Fast path tuning for simple research queries.
AGENT_FAST_RESEARCH_MAX_SOURCES=3
AGENT_FAST_RESEARCH_MAX_CHARS=4200
AGENT_FAST_RESEARCH_NUM_PREDICT=850

# Max retries for generation when transient errors occur.
AGENT_GEN_MAX_ATTEMPTS=4
# Session-only memory depth in chat turns (0 disables memory).
AGENT_MEMORY_TURNS=8
# Max chars kept per memory message.
AGENT_MEMORY_MAX_CHARS=2000
# Seconds before clearing stale status lines.
AGENT_STATUS_CLEAR_S=10
# Seconds between status refresh messages.
AGENT_STATUS_REPEAT_S=2
# Phase display style (line or compact variants supported by the app).
AGENT_PHASE_STYLE=line
# Print phase/status updates during execution.
AGENT_PHASE_ECHO=on
# Seconds between "thinking" heartbeat updates.
AGENT_THINK_HEARTBEAT_S=3
# Minimum confidence threshold for identity resolution checks.
AGENT_IDENTITY_MIN_CONF=0.90

# Auto-load latest available book index on startup.
AGENT_AUTO_BOOK=on
# Force a specific default book index name (empty = auto/latest).
AGENT_DEFAULT_BOOK=
# Max PDF pages to read when ingesting/indexing (0 means no page cap).
AGENT_MAX_PDF_PAGES=0
